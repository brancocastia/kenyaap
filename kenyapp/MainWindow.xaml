<Window x:Class="kenyapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KENYA - Bienvenido" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20" Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="KENYA" 
                   Foreground="#0099D6" 
                   FontSize="48" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20"/>

        <!-- Botones -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Button Content="💵 Botonera (Vender)" Height="60" FontSize="20" 
                    Background="#0099D6" Foreground="White" FontWeight="Bold" 
                    Margin="0,0,0,15"
                    Click="Botonera_Click"/>

            <Button Content="⚙️ Ajustes (Bebidas y Precios)" Height="60" FontSize="20"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold"
                    Margin="0,0,0,15"
                    Click="Ajustes_Click"/>

            <Button Content="📊 Reportes" Height="60" FontSize="20"
                    Background="#3f51b5" Foreground="White" FontWeight="Bold"
                    Margin="0,0,0,15"
                    Click="Reportes_Click"/>

            <Button Content="❌ Salir" Height="50" FontSize="18"
                    Background="#b71c1c" Foreground="White" FontWeight="Bold"
                    Click="Salir_Click"/>
        </StackPanel>
    </Grid>
</Window>
