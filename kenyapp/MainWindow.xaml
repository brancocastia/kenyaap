<Window x:Class="kenyapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Boliche Express"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        WindowState="Maximized"
        Background="#e8ecf1">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#f0f4f8" Offset="0"/>
                <GradientStop Color="#dfe6ef" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBlock Text="Hola usuario de Kenya"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="20,20,0,0"
                   FontSize="18"
                   Foreground="#2c3e50"
                   FontWeight="SemiBold"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,0">
            <StackPanel Margin="0,0,30,0">
                <Border Background="White" CornerRadius="20" Padding="30" Margin="0,0,0,30" Width="250" Height="120">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🟦" FontSize="30" HorizontalAlignment="Center"/>
                        <Button Content="Botonera" 
                                Background="Transparent" BorderBrush="Transparent" 
                                Foreground="#333" FontSize="18" FontWeight="Bold"
                                Click="Botonera_Click"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="20" Padding="30" Width="250" Height="120">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="⚙️" FontSize="30" HorizontalAlignment="Center"/>
                        <Button Content="Administrar productos" 
                                Background="Transparent" BorderBrush="Transparent"
                                Foreground="#333" FontSize="18" FontWeight="Bold"
                                Click="Ajustes_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel>
                <Border Background="White" CornerRadius="20" Padding="30" Margin="0,0,0,30" Width="250" Height="120">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📊" FontSize="30" HorizontalAlignment="Center"/>
                        <Button Content="Reportes" 
                                Background="Transparent" BorderBrush="Transparent"
                                Foreground="#333" FontSize="18" FontWeight="Bold"
                                Click="Reportes_Click"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="20" Padding="30" Width="250" Height="120">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🚪" FontSize="30" HorizontalAlignment="Center"/>
                        <Button Content="Cerrar sesión" 
                                Background="Transparent" BorderBrush="Transparent"
                                Foreground="#333" FontSize="18" FontWeight="Bold"
                                Click="Salir_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>