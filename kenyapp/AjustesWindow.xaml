<Window x:Class="kenyapp.AjustesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajustes - Bebidas" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e">


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Gestión de Bebidas" Foreground="White" FontSize="28" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- DataGrid para mostrar bebidas -->
        <DataGrid x:Name="BebidasGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  Background="White" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Precio" Binding="{Binding Precio}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="➕ Agregar" Width="120" Height="40" Background="#4caf50" Foreground="White" Click="Agregar_Click"/>
            <Button Content="✏️ Modificar" Width="120" Height="40" Background="#ff9800" Foreground="White" Click="Modificar_Click"/>
            <Button Content="🗑 Eliminar" Width="120" Height="40" Background="#f44336" Foreground="White" Click="Eliminar_Click"/>
            <Button Content="⬅ Volver" Width="120" Height="40" Background="#607d8b" Foreground="White" Click="Volver_Click"/>
        </StackPanel>
    </Grid>
</Window>
