<Window
    x:Class="kenyapp.AjustesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ajustes - Productos" Height="500" Width="700"
    WindowStartupLocation="CenterScreen"
    Background="White">

    <Grid Margin="20" Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- título -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- botones -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Gestión de Producto"
                   Foreground="#0099D6"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- DataGrid -->
        <DataGrid x:Name="ProductosGrid" Grid.Row="1"
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  Background="White" Margin="0,0,0,10"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="150"/>
                <DataGridTextColumn Header="Precio" Binding="{Binding Precio}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="➕ Agregar" Width="120" Height="40" Background="#0099D6" Foreground="White" Click="Agregar_Click"/>
            <Button Content="✏️ Modificar" Width="120" Height="40" Background="#4CAF50" Foreground="White" Click="Modificar_Click"/>
            <Button Content="🗑 Eliminar" Width="120" Height="40" Background="#f44336" Foreground="White" Click="Eliminar_Click"/>
            <Button Content="⬅ Volver" Width="120" Height="40" Background="#607d8b" Foreground="White" Click="Volver_Click"/>
        </StackPanel>
    </Grid>
</Window>
