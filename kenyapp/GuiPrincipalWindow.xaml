<Window x:Class="kenyapp.GuiPrincipalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Boliche Express" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Width="1000" Height="600"
        Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Panel Izquierdo -->
            <ColumnDefinition Width="*"/>
            <!-- Resto -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Barra superior -->
            <RowDefinition Height="*"/>
            <!-- Contenido -->
        </Grid.RowDefinitions>

        <!-- Panel Lateral Azul -->
        <!-- Panel Lateral Azul -->
        <StackPanel Grid.RowSpan="2" Background="#0099D6" Orientation="Vertical">
            <!-- Logo -->
            <Image Source="pack://application:,,,/Images/logo.jpg"
           Height="120"
           Stretch="UniformToFill"
           HorizontalAlignment="Stretch"
           VerticalAlignment="Top"/>

            <!-- Panel Usuario -->
            <StackPanel Orientation="Horizontal" Margin="20,10,0,10" Visibility="Collapsed" x:Name="UsuarioPanel">
                <Image x:Name="UsuarioFoto" Source="/Images/user.png" Width="40" Height="40" Margin="0,0,10,0"/>
                <TextBlock x:Name="lblUsuario" Text="¡Hola, x!" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Botón Ingresar (debajo del logo) -->
            <Button x:Name="btbIngresar" Click="btbIngresar_Click"
            Background="Transparent" Foreground="White" BorderBrush="Transparent"
            FontSize="14" HorizontalContentAlignment="Left" Padding="10" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⟳" FontSize="16" Margin="0,0,10,0"/>
                    <TextBlock Text="Ingresar"/>
                </StackPanel>
            </Button>

            <!-- Botón Cerrar sesión (justo debajo) -->
            <Button x:Name="btbCerrar" Click="btbCerrar_Click"
            Background="Transparent" Foreground="White" BorderBrush="Transparent"
            FontSize="14" HorizontalContentAlignment="Left" Padding="10" Margin="0,5,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏻" FontSize="16" Margin="0,0,10,0"/>
                    <TextBlock Text="Cerrar sesión"/>
                </StackPanel>
            </Button>

            <!-- (si querés espacio flexible debajo) -->
            <StackPanel VerticalAlignment="Stretch"/>
        </StackPanel>


        <!-- Barra Superior personalizada -->
        <Grid Grid.Column="1" Grid.Row="0" Background="#f0f0f0" MouseDown="BarraSuperior_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <!-- Botón Menú -->
            <Button Grid.Column="0" Background="Transparent" BorderBrush="Transparent">
                <TextBlock Text="≡" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
      

            <!-- Botón Minimizar -->
            <Button Grid.Column="2" Background="Transparent" BorderBrush="Transparent" Click="btnMinimizar_Click">
                <TextBlock Text="—" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>

            <!-- Botón Maximizar/Restaurar -->
            <Button Grid.Column="3" Background="Transparent" BorderBrush="Transparent" Click="btnMaximizar_Click">
                <TextBlock Text="⬜" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>

            <!-- Botón Cerrar -->
            <Button Grid.Column="4" Background="Transparent" BorderBrush="Transparent" Click="btnCerrar_Click">
                <TextBlock Text="✖" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
        </Grid>

        <!-- Panel Central -->
        <Grid Grid.Column="1" Grid.Row="1" x:Name="PanelContenedor" Background="#f5f5f5">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="¡Bienvenido a Boliche Express!" 
                           FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Pulse Ingresar para continuar." 
                           FontSize="16" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
