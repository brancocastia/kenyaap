<Window x:Class="kenyapp.GuiPrincipalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Boliche Express"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"   
        ResizeMode="CanResize"
        WindowState="Maximized"
        Background="White">



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Panel Izquierdo -->
            <ColumnDefinition Width="*"/>
            <!-- Resto -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Barra superior -->
            <RowDefinition Height="*"/>
            <!-- Contenido -->
        </Grid.RowDefinitions>

        <!-- Panel Lateral Azul -->
        <!-- Panel Lateral Azul -->
        <StackPanel Grid.RowSpan="2" Background="#0099D6" Orientation="Vertical">
            <!-- Logo -->
            <Image Source="pack://application:,,,/Images/logo.jpg"
           Height="120"
           Stretch="UniformToFill"
           HorizontalAlignment="Stretch"
           VerticalAlignment="Top"/>

            <!-- Botón Ingresar (debajo del logo) -->
            <Button x:Name="btbIngresar" Click="btbIngresar_Click"
            Background="Transparent" Foreground="White" BorderBrush="Transparent"
            FontSize="14" HorizontalContentAlignment="Left" Padding="10" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⟳" FontSize="16" Margin="0,0,10,0"/>
                    <TextBlock Text="Ingresar"/>
                </StackPanel>
            </Button>

            <!-- Botón Cerrar sesión (justo debajo) -->
            <Button x:Name="btbCerrar" Click="btbCerrar_Click"
            Background="Transparent" Foreground="White" BorderBrush="Transparent"
            FontSize="14" HorizontalContentAlignment="Left" Padding="10" Margin="0,5,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="x" FontSize="16" Margin="0,0,10,0"/>
                    <TextBlock Text="Cerrar sesión"/>
                </StackPanel>
            </Button>

            <!-- (si querés espacio flexible debajo) -->
            <StackPanel VerticalAlignment="Stretch"/>
        </StackPanel>



        <!-- Panel Central -->
        <Grid Grid.Column="1" Grid.Row="1" x:Name="PanelContenedor" Background="#f5f5f5">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="¡Bienvenido a Boliche Express!" 
                           FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Pulse Ingresar para continuar." 
                           FontSize="16" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
