<Window x:Class="kenyapp.Views.VentaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Venta" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Background="#f5f5f5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- IZQUIERDA: LISTADO DE BEBIDAS -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Bebidas" FontWeight="Bold" FontSize="20"
                       Foreground="#0099D6" Margin="0,0,0,10"/>

            <!-- ListView con GridView para mostrar nombre y precio -->
            <ListView x:Name="lstBebidas" MouseDoubleClick="lstBebidas_MouseDoubleClick"
                      Margin="0,0,0,10"
                      Background="White">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding Nombre}" Width="150"/>
                        <GridViewColumn Header="Precio" DisplayMemberBinding="{Binding Precio}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Selección de cantidad -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Cantidad:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="txtCantidad" Width="50" Text="1" Margin="0,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- DERECHA: PEDIDO -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Pedido Actual" FontWeight="Bold" FontSize="20"
                       Foreground="#0099D6" Margin="0,0,0,10"/>

            <ListView x:Name="lstPedido" Margin="0,0,0,10"
                      Background="White">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Producto" DisplayMemberBinding="{Binding Nombre}" Width="200"/>
                        <GridViewColumn Header="Cant." DisplayMemberBinding="{Binding Cantidad}" Width="50"/>
                        <GridViewColumn Header="Precio" DisplayMemberBinding="{Binding PrecioTotal}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <TextBlock x:Name="txtSubtotal" FontSize="16" FontWeight="Bold"
                       Foreground="#0099D6"
                       Text="Subtotal: $0" Margin="0,0,0,10"/>

            <!-- BOTONERA -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Cantidad de tickets:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="txtCantidadTickets" Width="50" Text="1" Margin="0,0,5,0"/>
                <Button Content="Ticket" Width="100" Margin="5"
                        Background="#0099D6" Foreground="White" Click="btnTicket_Click"/>
                <Button Content="Salir" Width="100" Margin="5"
                        Background="#b71c1c" Foreground="White" Click="btnSalir_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
