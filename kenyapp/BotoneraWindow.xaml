<Window x:Class="kenyapp.Views.VentaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Boliche Express"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        WindowState="Maximized"
        Background="#E3F2F9">

    <Grid Background="#F7FBFC">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Background="#89C2D9" LastChildFill="True" Height="50">
            <Button Content="⬅ Volver" Width="100" Margin="10,0,0,0"
                    Background="Transparent" BorderBrush="Transparent"
                    Foreground="White" FontWeight="Bold" Click="btnVolver_Click"/>
            <TextBlock Text="Venta" FontSize="18" FontWeight="Bold"
                       Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </DockPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <TextBlock Text="Bebidas" FontWeight="Bold" FontSize="20"
                       Foreground="#61A5C2" Margin="0,0,0,10"/>

            <WrapPanel x:Name="TipoPanel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,10">
                <Button Content="Todos" Margin="5" Padding="10,5" Background="#89C2D9" Foreground="White" Click="FiltroTipo_Click"/>
                <Button Content="Entradas" Margin="5" Padding="10,5" Background="#89C2D9" Foreground="White" Click="FiltroTipo_Click"/>
                <Button Content="Tragos" Margin="5" Padding="10,5" Background="#89C2D9" Foreground="White" Click="FiltroTipo_Click"/>
                <Button Content="Cervezas" Margin="5" Padding="10,5" Background="#89C2D9" Foreground="White" Click="FiltroTipo_Click"/>
                <Button Content="Sin alcohol" Margin="5" Padding="10,5" Background="#89C2D9" Foreground="White" Click="FiltroTipo_Click"/>
                <Button Content="Espumantes" Margin="5" Padding="10,5" Background="#89C2D9" Foreground="White" Click="FiltroTipo_Click"/>
                <Button Content="Bebidas VIP" Margin="5" Padding="10,5" Background="#89C2D9" Foreground="White" Click="FiltroTipo_Click"/>
                <Button Content="Guardarropas" Margin="5" Padding="10,5" Background="#89C2D9" Foreground="White" Click="FiltroTipo_Click"/>
            </WrapPanel>

            <ListView x:Name="lstBebidas" MouseDoubleClick="lstBebidas_MouseDoubleClick"
                      Margin="0,0,0,10"
                      Background="White">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding Nombre}" Width="150"/>
                        <GridViewColumn Header="Tipo" DisplayMemberBinding="{Binding Tipo}" Width="100"/>
                        <GridViewColumn Header="Precio" DisplayMemberBinding="{Binding Precio}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Cantidad:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="txtCantidad" Width="50" Text="1"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            <TextBlock Text="Pedido Actual" FontWeight="Bold" FontSize="20"
                       Foreground="#61A5C2" Margin="0,0,0,10"/>

            <ListView x:Name="lstPedido" Margin="0,0,0,10"
                      Background="White">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Producto" DisplayMemberBinding="{Binding Nombre}" Width="200"/>
                        <GridViewColumn Header="Cant." DisplayMemberBinding="{Binding Cantidad}" Width="50"/>
                        <GridViewColumn Header="Precio" DisplayMemberBinding="{Binding PrecioTotal}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <TextBlock x:Name="txtSubtotal" FontSize="16" FontWeight="Bold"
                       Foreground="#61A5C2"
                       Text="Subtotal: $0" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Cantidad de tickets:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="txtCantidadTickets" Width="50" Text="1" Margin="0,0,5,0"/>
                <Button Content="Ticket" Width="120" Margin="5"
                        Background="#89C2D9" Foreground="White" Click="btnTicket_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
