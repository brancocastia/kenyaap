<Window x:Class="kenyapp.SelectTipoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleccione tipo" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Seleccione el tipo de producto:" Margin="0,0,0,10"/>
        <ComboBox x:Name="TipoComboBox" SelectedIndex="-1">
            <ComboBoxItem Content="Guardarropas"/>
            <ComboBoxItem Content="Tragos"/>
            <ComboBoxItem Content="Cervezas"/>
            <ComboBoxItem Content="Sin alcohol"/>
            <ComboBoxItem Content="Espumantes"/>
            <ComboBoxItem Content="Bebidas VIP"/>
        </ComboBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Aceptar" Width="80" Margin="0,0,5,0" Click="Aceptar_Click"/>
            <Button Content="Cancelar" Width="80" Click="Cancelar_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
